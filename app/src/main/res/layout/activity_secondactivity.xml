<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:backgroundTint="@android:color/background_light"
    tools:context=".secondactivity"
    android:paddingBottom="20dp"
    android:paddingTop="10dp"
    android:paddingEnd="20dp"
    android:paddingStart="20dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="50sp"
        android:paddingTop="20dp"
        app:cardCornerRadius="30dp">
    <TextView
        android:id="@+id/Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:layout_marginEnd="8dp"
        android:hint="Name of the drug"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#009688"
        android:textSize="30sp"
        android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:textColor="#009688"
        android:inputType="none"
        android:text="When it should be taken:"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/Time_Taken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:inputType="none"
        android:paddingBottom="20dp"
        android:text="Time"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/interact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:inputType="none"
        android:textColor="#009688"
        android:text="Interacting with :"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/Interaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:inputType="none"
        android:paddingBottom="20dp"
        android:text="Interaction"
        android:textAlignment="viewStart"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:textColor="#009688"
        android:text="Description of drug-food interaction effect :"
        android:textSize="19sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:inputType="none"
        android:paddingBottom="20dp"
        android:text="Description"
        android:textAlignment="viewStart"
        android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="Food to be avoided :"
                android:textColor="#009688"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/foodavoid"
                android:layout_width="164dp"
                android:layout_height="105dp"
                android:layout_gravity="center"
                android:paddingTop="3.5dp"
                android:textSize="14sp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avoid_1"
            android:layout_width="150sp"
            android:layout_height="120sp"
            android:layout_gravity="start"
            android:src="@mipmap/ic_launcher"
            android:onClick="enlarge"/>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/Food_Taken"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:paddingBottom="10dp"
        android:textColor="#009688"
        android:text="Food can be taken : "
        android:textSize="20sp"
        android:textStyle="bold"/>

            <TextView
                android:id="@+id/foodtaken"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="36dp"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_benefit_1"
            android:layout_width="150sp"
            android:layout_height="120sp"
            android:layout_gravity="start"
            android:src="@mipmap/ic_launcher"
            android:onClick="enlarge2"/>

    </LinearLayout>

</ScrollView>